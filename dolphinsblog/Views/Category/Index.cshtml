@model IEnumerable<EntityLayer.Concrete.Category>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kategoriler</title>
</head>
<body>
    <div>
        <h1> Kategoriler </h1>
        <hr />

        <table border="1">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Kategori Adı</th>
                </tr>
            </thead>

            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.CategoryID</td>
                        <td>@item.CategoryName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
